	private void jButton15ActionPerformed(java.awt.event.ActionEvent evt) {
		//修改
		Statement st=null;
		int rid = 0;
		boolean flag = true;
		while (flag) {
			this.jTextField1.setText(null);
			this.jTextField15.setText(null);
			this.jTextField12.setText(null);
			this.jTextField16.setText(null);
			this.jTextField17.setText(null);
			this.jTextField18.setText(null);
			this.jTextField13.setText(null);
			flag = false;
		}
		
		st=Utils.getSt();
		try {
			//4、执行
			System.out.println(嘎哈的);
			if (this.jTextField1.getText() == null) {
				JOptionPane.showMessageDialog(this, "请输入要修改的进货单号！");
			} else {
				rid = Integer.parseInt(this.jTextField1.getText());
			}
			if (this.jTextField15.getText() != null) {
				String sql1 = "update receipt set Gname = '"+this.jTextField15.getText()+"' where Gid = '"+rid+"';";
				st.executeUpdate(sql1);
			}
			if (this.jTextField12.getText() != null) {
				String sql1 = "update receipt set Rnumber = '"+Integer.parseInt(this.jTextField12.getText())+"' where Gid = '"+rid+"';";
				st.executeUpdate(sql1);
			}
			if (this.jTextField16.getText() != null) {
				String sql1 = "update receipt set Rprice = '"+Float.parseFloat(this.jTextField16.getText())+"' where Gid = '"+rid+"';";
				st.executeUpdate(sql1);
			}
			if (this.jTextField17.getText() != null) {
				String sql1 = "update receipt set sum = '"+Float.parseFloat(this.jTextField17.getText())+"' where Gid = '"+rid+"';";
				st.executeUpdate(sql1);
			}
			if (this.jTextField18.getText() != null) {
				String sql1 = "update receipt set Sname = '"+this.jTextField18.getText()+"' where Gid = '"+rid+"';";
				st.executeUpdate(sql1);
			}
			if (this.jTextField13.getText() != null) {
				String sql1 = "update receipt set Rdate = '"+this.jTextField13.getText()+"' where Gid = '"+rid+"';";
				st.executeUpdate(sql1);
			}
			

		} catch (SQLException e) {
			e.printStackTrace();
		} 		
	}

