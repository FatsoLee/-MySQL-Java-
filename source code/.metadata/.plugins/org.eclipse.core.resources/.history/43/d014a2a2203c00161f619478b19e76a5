	private void jButton12ActionPerformed(java.awt.event.ActionEvent evt) {
		//查询
		int rid_temp = Integer.parseInt(this.jTextField14.getText());
		Statement st = null;

		st = Utils.getSt();
		try {
			//4、执行
			String sql = "select * from receipt where Rid ='" + rid_temp + "';";
			ResultSet rs = st.executeQuery(sql);

			int row = 0;
			//5、处理执行结果
			while (rs.next()) {
				int rid1 = rs.getInt(1);
				jTable1.setValueAt(rid1, row, 0);
				String gname = rs.getString(2);
				jTable1.setValueAt(gname, row, 1);
				int rnumber_tmp = rs.getInt(3);
				jTable1.setValueAt(rnumber_tmp, row, 2);
				float rprice_tmp = rs.getFloat(4);
				jTable1.setValueAt(rprice_tmp, row, 3);
				float sum_tmp = rs.getFloat(5);
				jTable1.setValueAt(sum_tmp, row, 4);
				String sname_tmp = rs.getString(6);
				jTable1.setValueAt(sname_tmp, row, 5);
				String rdate_tmp = rs.getString(7);
				jTable1.setValueAt(rdate_tmp, row, 6);
				++row;
			}
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}

	private void jButton10ActionPerformed(java.awt.event.ActionEvent evt) {
		// 录入按钮点击事件

		String gname = this.jTextField15.getText();
		int rnumber = Integer.parseInt(this.jTextField12.getText());
		float rprice = Float.valueOf(this.jTextField16.getText());
		float sum = rnumber * rprice;
		jTextField17.setText(Float.toString(sum));
		String sname = this.jTextField18.getText();
		String rdate = this.jTextField13.getText();
		int row = 0;

		Statement st = null;
		st = Utils.getSt();
		try {
			//4、执行
			String sql1 = "insert into receipt(Gname,Rnumber,Rprice,sum,Sname,Rdate) values('"
					+ gname
					+ "','"
					+ rnumber
					+ "','"
					+ rprice
					+ "','"
					+ sum
					+ "','" + sname + "','" + rdate + "');";
			st.executeUpdate(sql1);

			//5、处理执行结果
			String sql2 = "select * from receipt";
			ResultSet rs = st.executeQuery(sql2);

			//5、处理执行结果
			while (rs.next()) {
				String rid_tmp = Integer.toString(rs.getInt(1));
				jTable1.setValueAt(rid_tmp, row, 0);
				String gname_tmp = rs.getString(2);
				jTable1.setValueAt(gname_tmp, row, 1);
				String rnumber_tmp = rs.getString(3);
				jTable1.setValueAt(rnumber_tmp, row, 2);
				String rprice_tmp = rs.getString(4);
				jTable1.setValueAt(rprice_tmp, row, 3);
				String sum_tmp = rs.getString(5);
				jTable1.setValueAt(sum_tmp, row, 4);
				String sname_tmp = rs.getString(6);
				jTable1.setValueAt(sname_tmp, row, 5);
				String rdate_tmp = rs.getString(7);
				jTable1.setValueAt(rdate_tmp, row, 6);
				row++;
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			Utils.close(st);
		}

	}

