	private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {
		
		String posId = this.jTextField4.getSelectedText();
		Statement st=null;
		int row = 0;
		
		st=Utils.getSt();
		try {
			//4、执行
			String sql = "select * from cashier where posid=";
			ResultSet rs = st.executeQuery(sql+posId+";");
			System.out.println(rs.getRow());
			
			//5、处理执行结果
			while(rs.getRow() >= 0) {
				String posid = rs.getString(2);
				jTable1.setValueAt(posid, row, 0);
				Float money = rs.getFloat(3);
				jTable1.setValueAt(money, row, 1);
				String date = rs.getString(4);
				jTable1.setValueAt(date, row, 2);
				row++;
			}
			
		} catch (SQLException e) {
			e.printStackTrace();
		} finally{
			Utils.close(st);
		}
	}

