	private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
		String posNumber = this.jTextField1.getText();
		float money = Float.valueOf(this.jTextField2.getText());
		String posDate = jTextField3.getText();
		
		Statement st=null;
		st=Utils.getSt();
		try {
			//4、执行
			String sql="insert into cashier(posid,Cmoney,Cdate) values('"+posNumber+"','"+money+"','"+posDate+"');";
			int num=st.executeUpdate(sql);
			
			//5、处理执行结果
			System.out.println(num);
		} catch (SQLException e) {
			e.printStackTrace();
		} finally{
			Utils.close(st);
		}
		
	}

