	private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
		//查询
		String sid_temp = this.jTextField4.getText();
		Statement st = null;

		st = Utils.getSt();
		try {
			//4、执行
			String sql = "select * from supplier where Sid ='" + sid_temp
					+ "';";
			ResultSet rs = st.executeQuery(sql);

			int row = 0;
			//5、处理执行结果
			while (rs.next()) {
				int sid = rs.getInt(1);
				jTable1.setValueAt(sid, row, 0);
				String sname = rs.getString(2);
				jTable1.setValueAt(sname, row, 1);
				String sphone = rs.getString(3);
				jTable1.setValueAt(sphone, row, 2);
				String snumber = rs.getString(4);
				jTable1.setValueAt(snumber, row, 3);
				String sadress = rs.getString(5);
				jTable1.setValueAt(sadress, row, 4);
			}
		}

		catch (SQLException e) {
			e.printStackTrace();
		}
	}

