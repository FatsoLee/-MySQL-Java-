	private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
		//修改更新
		Statement st = null;
		st = Utils.getSt();

		int gid = Integer.parseInt(jTextField14.getText());
		String gname = jTextField4.getText();
		float saleprice_temp = Float.parseFloat(jTextField5.getText());
		int inventory_temp = Integer.parseInt(this.jTextField6.getText());
		int sid_temp = Integer.parseInt(this.jTextField7.getText());
		String sql2 = "update goods set Gname = '" + gname + "',"
				+ "saleprice = '" + saleprice_temp + "',inventory = '"
				+ inventory_temp + "'," + "Sid = '" + sid_temp
				+ "'where Gid = '" + gid + "';";
		try {
			st.executeUpdate(sql2);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		this.dispose();
	}

	private void jButton12ActionPerformed(java.awt.event.ActionEvent evt) {
		//查询
		int gid_temp = Integer.parseInt(this.jTextField14.getText());
		Statement st = null;

		st = Utils.getSt();
		try {
			//4、执行
			String sql1 = "select * from goods where Gid ='" + gid_temp + "';";
			ResultSet rs = st.executeQuery(sql1);
			//5、处理执行结果
			while (rs.next()) {
				String gid = Integer.toString(rs.getInt(1));
				jTextField1.setText(gid);
				String gname_tmp = rs.getString(2);
				jTextField4.setText(gname_tmp);
				float saleprice_tmp = rs.getFloat(3);
				jTextField5.setText(Float.toString(saleprice_tmp));
				float inventory_tmp = rs.getFloat(4);
				jTextField6.setText(Float.toString(inventory_tmp));
				String sid_tmp = rs.getString(5);
				jTextField7.setText(sid_tmp);
			}

		} catch (SQLException e) {
			e.printStackTrace();
		}
	}

