	private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
		// TODO add your handling code here:
		//录入

		int gid = Integer.parseInt(this.jTextField1.getText());
		int bnumber = Integer.parseInt(this.jTextField2.getText());
		float bmoney = Float.valueOf(this.jTextField3.getText());
		String bdate = this.jTextField4.getText();
		String breason = this.jTextField5.getText();
		int eid = Integer.parseInt(this.jTextField6.getText());

		int row = 0;

		Statement st = null;
		st = Utils.getSt();
		try {
			//4、执行
			String sql1 = "insert into back(Gid,Bnumber,Bmoney,Bdate,Breason,Eid) values('"
					+ gid
					+ "','"
					+ bnumber
					+ "','"
					+ bmoney
					+ "','"
					+ bdate
					+ "','" + breason + "','" + eid + "');";
			st.executeUpdate(sql1);

			//5、处理执行结果
			String sql2 = "update Ranking set salenumber = salenumber - '"
					+ bnumber + "' where Gid = '" + gid + "';";
			st.executeUpdate(sql2);

			//String sql3 = "insert into loss(Gid,Lnumber,Lreason) values('"
			//		+ gid + "','" + bnumber + "','" + breason + "');";
			//st.executeUpdate(sql3);

			String sql4 = "select * from Back";
			ResultSet rs = st.executeQuery(sql4);

			//5、处理执行结果
			while (rs.next()) {
				if (jTable1.getRowCount() - 1 < row) {
					DefaultTableModel tableModel = (DefaultTableModel) jTable1.getModel();
					tableModel.addRow(new Object[] { "" });
				}
				String bid_t = Integer.toString(rs.getInt(1));
				jTable1.setValueAt(bid_t, row, 0);
				String gid_t = Integer.toString(rs.getInt(2));
				jTable1.setValueAt(gid_t, row, 1);
				String bnumber_t = Integer.toString(rs.getInt(1));
				jTable1.setValueAt(bnumber_t, row, 0);
				String bmoney_t = Float.toString(rs.getInt(3));
				jTable1.setValueAt(bmoney_t, row, 2);
				String breason_t = rs.getString(4);
				jTable1.setValueAt(breason_t, row, 3);
				String eid_t = rs.getString(5);
				jTable1.setValueAt(eid_t, row, 4);
				String date_t = rs.getString(6);
				jTable1.setValueAt(date_t, row, 5);

				row++;
			}

		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			Utils.close(st);
		}

	}

