	private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {
		//查询
		int gid = Integer.parseInt(this.jTextField7.getText());
		Statement st = null;
		int i = 0;
		st = Utils.getSt();
		DefaultTableModel tableModel = (DefaultTableModel) jTable1.getModel();
		
		while (i<jTable1.getRowCount()) {
			tableModel.removeRow(0);
		}
		try {
			//4、执行
			String sql = "select * from Back where Gid ='" + gid + "';";
			ResultSet rs = st.executeQuery(sql);

			int row = 0;
			//5、处理执行结果
			while (rs.next()) {
				if (jTable1.getRowCount() - 1 < row) {
					tableModel.addRow(new Object[] { "" });
				}
				
				String gid_t = Integer.toString(rs.getInt(2));
				jTable1.setValueAt(gid_t, row, 0);
				String bnumber_t = Integer.toString(rs.getInt(3));
				jTable1.setValueAt(bnumber_t, row, 1);
				String bmoney_t = Float.toString(rs.getFloat(4));
				jTable1.setValueAt(bmoney_t, row, 2);
				String breason_t = rs.getString(5);
				jTable1.setValueAt(breason_t, row, 3);
				String  eid_t= rs.getString(6);
				jTable1.setValueAt(eid_t, row, 4);
				String date_t = rs.getString(7);
				jTable1.setValueAt(date_t, row, 5);
				++row;
			}
		} catch (SQLException e) {
			e.printStackTrace();
		}

	}

