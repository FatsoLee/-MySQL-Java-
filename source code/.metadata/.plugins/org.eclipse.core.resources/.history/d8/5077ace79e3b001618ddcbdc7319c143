	private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {
		//录入
		String sname = this.jTextField6.getText();
		String sphone = this.jTextField5.getText();
		String snumber = this.jTextField2.getText();
		String saddress = this.jTextField3.getText();
		int row = 0;

		Statement st = null;
		st = Utils.getSt();
		try {
			//4、执行
			String sql1 = "insert into supplier(Sname,Sphone,Snumber,Sadress) values('"
					+ sname
					+ "','"
					+ sphone
					+ "','"
					+ snumber
					+ "','"
					+ saddress + "');";
			st.executeUpdate(sql1);

			//5、处理执行结果
			String sql2 = "select * from supplier";
			ResultSet rs = st.executeQuery(sql2);

			//5、处理执行结果
			while (rs.next()) {
				String sid = Integer.toString(rs.getInt(1));
				jTable1.setValueAt(sid, row, 0);
				String sname_tmp = rs.getString(2);
				jTable1.setValueAt(sname_tmp, row, 1);
				String sphone_tmp = rs.getString(3);
				jTable1.setValueAt(sphone_tmp, row, 2);
				String snumber_tmp = rs.getString(4);
				jTable1.setValueAt(snumber_tmp, row, 3);
				String saddress_tmp = rs.getString(5);
				jTable1.setValueAt(saddress_tmp, row, 4);
				row++;
			}

		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			Utils.close(st);
		}
	}

