	private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
		//修改更新
		Statement st = null;
		st = Utils.getSt();

		int rid = Integer.parseInt(jTextField14.getText());
		String gname = jTextField15.getText();
		int rnumber = Integer.parseInt(jTextField12.getText());
		float rprice = Float.parseFloat(jTextField18.getText());
		float sum = Float.parseFloat(jTextField16.getText());
		String sname = jTextField17.getText();
		String rdate = jTextField13.getText();
		String sql2 = "update receipt set Gname = '" + gname + "',"
				+ "Rnumber = '" + rnumber + "',Rprice = '" + rprice
				+ "',sum = '" + sum + "'," + "Sname = '" + sname + "',"
				+ "Rdate = '" + rdate + "'where Rid = '" + rid + "';";
		try {
			st.executeUpdate(sql2);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		this.dispose();
	}

