	private void jButton12ActionPerformed(java.awt.event.ActionEvent evt) {
		//查询
		int rid_temp = Integer.parseInt(this.jTextField14.getText());
		Statement st = null;

		st = Utils.getSt();
		try {
			//4、执行
			String sql1 = "select * from receipt where Rid ='" + rid_temp
					+ "';";
			ResultSet rs = st.executeQuery(sql1);
			//5、处理执行结果
			while (rs.next()) {
				String gname_tmp = rs.getString(2);
				jTextField15.setText(gname_tmp);
				int rnumber_tmp = rs.getInt(3);
				jTextField12.setText(Integer.toString(rnumber_tmp));
				float rprice_tmp = rs.getFloat(4);
				jTextField18.setText(Float.toString(rprice_tmp));
				float sum_tmp = rs.getFloat(5);
				jTextField16.setText(Float.toString(sum_tmp));
				String sname_tmp = rs.getString(6);
				jTextField17.setText(sname_tmp);
				String rdate_tmp = rs.getString(7);
				jTextField13.setText(rdate_tmp);
			}

		} catch (SQLException e) {
			e.printStackTrace();
		}
	}

