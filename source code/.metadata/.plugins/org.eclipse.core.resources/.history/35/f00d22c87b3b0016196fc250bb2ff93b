	private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
		String gname = this.jTextField2.getText();
		float saleprice = Float.valueOf(this.jTextField3.getText());
		int inventory = Integer.parseInt(jTextField5.getText());
		int sid = 0;

		Statement st = null;
		st = Utils.getSt();
		try {
			//4、执行
			String sql1 = "select Sid from receipt where Gid in (select Gid from Goods where gname='"
					+ gname + "' )";
			ResultSet rs = st.executeQuery(sql1);
			while (rs.next()) {
				sid = rs.getInt(1);
			}

			String sql2 = "insert into goods(Gname,saleprice,inventory,Sid) values('"
					+ gname
					+ "','"
					+ saleprice
					+ "','"
					+ inventory
					+ "','"
					+ sid + "');";
			int num = st.executeUpdate(sql2);

			//5、处理执行结果
			System.out.println(num);
		} catch (SQLException e) {
			e.printStackTrace();
		}
		//		finally {
		//			Utils.close(st);
		//		}
	}

