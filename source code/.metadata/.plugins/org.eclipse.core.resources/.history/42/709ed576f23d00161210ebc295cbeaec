	private void jTextField16ActionPerformed(java.awt.event.ActionEvent evt) {
		rnumber = Integer.parseInt(this.jTextField12.getText());
		rprice = Float.valueOf(this.jTextField18.getText());
		sum = rnumber * rprice;
		jTextField16.setText(Float.toString(sum));
	}

