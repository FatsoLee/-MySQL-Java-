	private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
		// 录入按钮点击事件
		int gnumber = 0;
		String gname = this.jTextField15.getText();
		int rnumber = Integer.parseInt(this.jTextField12.getText());
		float rprice = Float.valueOf(this.jTextField16.getText());
		float sum = rnumber * rprice;
		String sname = this.jTextField18.getText();
		String rdate = this.jTextField13.getText();
		
		Statement st = null;
		st = Utils.getSt();
		try {
			//4、执行
			String sql1 = "insert into receipt(Gname,Rnumber,Rprice,sum,Sname,Rdate) values('"
					+ gname
					+ "','"
					+ rnumber
					+ "','"
					+ rprice
					+ "','"
					+ sum
					+ "','" + sname + "','" + rdate + "');";
			st.executeUpdate(sql1);
			
			String sql2 = "select * from goods where Gname like % '" + gname
					+ "' %;";
			
			ResultSet rs2 = st.executeQuery(sql2);

			int row = 0;
			//5、处理执行结果
			while (rs2.next()) {
				gnumber = rs2.getInt(3) + rnumber;
				System.out.println(gnumber);
			}
			
			String sql3 = "update goods set inventory = '" + gnumber + "');";
			st.executeUpdate(sql3);
		} catch (SQLException e) {
			e.printStackTrace();
		}
		this.dispose();
	}

